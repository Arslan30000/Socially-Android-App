<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/home_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/status_bar_black"
        >
    </ImageView>
    <RelativeLayout
        android:id="@+id/image"
        android:layout_below="@id/home_bar"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/box_9"
        >
        <ImageView
            android:id="@+id/middle_i"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image8"
            >
        </ImageView>

        <RelativeLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            >
            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_marginBottom="50dp"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/close_brown"
                    >
                </ImageView>
                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/close"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/partnership"
                    >
                </ImageView>
                <ImageView
                    android:id="@+id/text"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/profile"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text"
                    >
                </ImageView>
                <ImageView
                    android:id="@+id/sticker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/text"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/stickers_circular"
                    >
                </ImageView>
                <ImageView
                    android:id="@+id/Music"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/sticker"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/music"
                    >
                </ImageView>
                <ImageView
                    android:id="@+id/twinkle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/Music"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/filters"
                    >
                </ImageView>
                <ImageView
                    android:id="@+id/options_0"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/twinkle"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/options_circular"
                    >
                </ImageView>





            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/story"
            android:layout_centerVertical="true"
            >
        </ImageView>
        <ImageView
            android:id="@+id/f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/close_friends"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/s"
            >
        </ImageView>
        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_cir"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/f"
            >
        </ImageView>

        <ImageView
            android:id="@+id/home_indicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/home_indicator_lightb">
        </ImageView>

    </RelativeLayout>



</RelativeLayout>