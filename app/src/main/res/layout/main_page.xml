<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/status_bar">
    </ImageView>

    <RelativeLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_bar">

        <ImageView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/camera2"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/Socially"
            android:textSize="15sp"
            android:textColor="@color/light_brown2"
            android:textStyle="bold">
        </TextView>

        <ImageView
            android:id="@+id/reels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reels"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_centerVertical="true">
        </ImageView>

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/share"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp">
        </ImageView>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_below="@id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"
        android:layout_marginTop="5dp">
    </View>

    <LinearLayout
        android:id="@+id/story_box"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/line"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profile_image"
                app:civ_border_width="2dp"
                app:civ_border_color="#A52A94">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Story"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profile_image"
                app:civ_border_width="2dp"
                app:civ_border_color="#A52A94">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="karenne"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profile_image"
                app:civ_border_width="2dp"
                app:civ_border_color="#A52A94">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zackjohn"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profile_image"
                app:civ_border_width="2dp"
                app:civ_border_color="#A52A94">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kieron_d"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_below="@id/story_box"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"
        >
    </View>

    <RelativeLayout
        android:id="@+id/Profile_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"

        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_1"
            android:layout_width="40dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile_image"
            app:civ_border_color="#A52A94">
        </de.hdodenhof.circleimageview.CircleImageView>
        <LinearLayout
            android:id="@+id/details"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/josh"

                >
            </TextView>
            <ImageView
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/verfied_badge"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/details"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:orientation="horizontal"
            android:weightSum="4"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/japan"

            >
        </TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/options"
            android:layout_marginEnd="7dp"
            >
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/post"
        android:layout_below="@id/Profile_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
        <ImageView
            android:id="@+id/post_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"


            android:background="@drawable/post_number"
            android:layout_marginEnd="7dp"
            >
        </ImageView>
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/image8"
            >
    </ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/options_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post"

        >
        <ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/like"
            android:layout_marginStart="10dp"
            >
        </ImageView>
        <ImageView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comment"
            android:layout_marginStart="42dp"
            android:layout_alignStart="@id/like"
            >
        </ImageView>
        <ImageView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/share_black"
            android:layout_marginStart="42dp"
            android:layout_alignStart="@id/message"
            >
        </ImageView>
        <ImageView
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/options_2"

           android:layout_centerInParent="true"
            >
        </ImageView>
        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/save"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"

            >
        </ImageView>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/options_bar"
        android:padding="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/like_profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/profile_image"
            app:civ_border_width="1dp"
            app:civ_border_color="@android:color/transparent" />

        <TextView
            android:id="@+id/likes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/like_profile"
            android:layout_marginStart="8dp"

            android:text="Liked by craig_love and 44,686 others"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="bold" >
        </TextView>


        <TextView
            android:id="@+id/caption_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/likes_text"
            android:layout_marginTop="6dp"
           android:text="@string/josh"
            android:textStyle="bold"
            android:layout_marginStart="0dp"
            android:textSize="13sp"
            android:textColor="@color/black" >
        </TextView>
        <TextView
            android:id="@+id/caption_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/likes_text"
            android:layout_marginTop="6dp"
           android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/caption_text"
            android:text="@string/game"
            android:layout_marginStart="0dp"
            android:textSize="13sp"
            android:textColor="@color/black" >
        </TextView>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu_bar">
    </ScrollView>

</RelativeLayout>
